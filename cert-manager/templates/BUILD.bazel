package(default_visibility = ["//visibility:public"])

filegroup(
    name = "chart-srcs",
    srcs = [
        "crds.yaml",
    ] + glob(
        [
            "*.yaml",
            "*.txt",
        ],
    ),
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
